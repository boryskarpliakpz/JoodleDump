<Window x:Class="UiView.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UiView"
        mc:Ignorable="d"
        Title="MainWindow" Height="360" Width="590">
    <StackPanel>
        <DataGrid x:Name="PlayField" 
        Height="218"
        VerticalAlignment="Top"
        RenderTransformOrigin="0.48,0.49"
        Margin="138,58,154,0"
        RowHeight="20"
        AutoGenerateColumns="True"
        ItemsSource="{Binding Path=Platforms}"
        Width="Auto"
        >
        </DataGrid>
        <Button Content="MakeStable"/>
    </StackPanel>

</Window>
